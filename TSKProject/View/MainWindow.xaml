<Window x:Class="TSKProject.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TSKProject.ViewModel"
        xmlns:local="clr-namespace:TSKProject.View"
        mc:Ignorable="d"
        Title="TSKProject" Height="450" Width="800">

    <Window.Resources>
        <vm:MainWindowViewModel x:Key="MainWindowViewModel"/>
    </Window.Resources>

    <Grid Name="MainGrid" DataContext="{StaticResource MainWindowViewModel}">
        <Button Content="Open File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OnOpenFileClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding FileName, Mode=TwoWay}"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="75" Click="OnPlayClick"/>
        <Button Content="Play Unprocessed" HorizontalAlignment="Left" Margin="110,56,0,0" VerticalAlignment="Top" Width="109" Click="OnPlayUnprocessedClick"/>

    </Grid>
</Window>
